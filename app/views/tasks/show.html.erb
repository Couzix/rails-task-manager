<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
<p><input type="checkbox" name= "active[]" value=<%= @task.completed ? "t" : "f" %> <%= 'checked' %>><%= 'This task has been completed !' %></p>
<% else %>
<p><input type="checkbox" name= "active[]" value=<%= @task.completed ? "t" : "f" %>><%= 'This task is not completed yet.' %></p>
<% end %>

<%= link_to 'Edit this task', edit_path(@task) %>

<%= link_to 'Back to list', tasks_path(@tasks) %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
